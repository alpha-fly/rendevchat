    codeInput1.addEventListener('focus', (event) => {           
    event.target.value = null;
    })
    const codeInput2 = document.querySelector('input[id="CodeInput2"]')    
    codeInput2.addEventListener('focus', (event) => {           
    event.target.value = null;
    })
